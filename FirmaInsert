INSERT INTO [dbo].[FIRMALAR]
           ([fir_Guid]            -- Firmanın benzersiz kimliği (GUID)
           ,[fir_DBCno]           -- Veritabanı numarası
           ,[fir_SpecRECno]       -- Özel kayıt numarası
           ,[fir_iptal]           -- Firmanın iptal durumu (0: Aktif, 1: İptal)
           ,[fir_fileid]          -- Dosya kimliği
           ,[fir_hidden]          -- Firmanın gizli olup olmadığı (0: Görünür, 1: Gizli)
           ,[fir_kilitli]         -- Firmanın kilitli olup olmadığı (0: Kilitsiz, 1: Kilitli)
           ,[fir_degisti]         -- Firmada değişiklik yapılıp yapılmadığı (0: Değişmedi, 1: Değişti)
           ,[fir_checksum]        -- Veri bütünlüğü için kullanılan checksum
           ,[fir_create_user]     -- Kaydı oluşturan kullanıcı ID'si
           ,[fir_create_date]     -- Kaydın oluşturulma tarihi
           ,[fir_lastup_user]     -- Son güncellemeyi yapan kullanıcı ID'si
           ,[fir_lastup_date]     -- Son güncelleme tarihi
           ,[fir_special1]        -- Özel alan 1
           ,[fir_special2]        -- Özel alan 2
           ,[fir_special3]        -- Özel alan 3
           ,[fir_sirano]          -- Firma sıra numarası
           ,[fir_unvan]           -- Firmanın unvanı (birinci satır)
           ,[fir_unvan2]          -- Firmanın unvanı (ikinci satır, opsiyonel)
           ,[fir_FVergiDaire]     -- Vergi dairesi
           ,[fir_FVergiNo]        -- Vergi numarası
           )
     VALUES
           (NEWID()               -- fir_Guid: benzersiz kimlik
           ,0                     -- fir_DBCno: veritabanı numarası
           ,0                     -- fir_SpecRECno: özel kayıt numarası
           ,0                     -- fir_iptal: iptal durumu (0=aktif)
           ,0                     -- fir_fileid: dosya kimliği
           ,0                     -- fir_hidden: gizli mi (0=hayır)
           ,0                     -- fir_kilitli: kilitli mi (0=hayır)
           ,0                     -- fir_degisti: değişti mi (0=hayır)
           ,0                     -- fir_checksum: veri bütünlüğü için
           ,1                     -- fir_create_user: oluşturan kullanıcı ID
           ,GETDATE()             -- fir_create_date: oluşturma tarihi
           ,1                     -- fir_lastup_user: son güncelleyen kullanıcı ID
           ,GETDATE()             -- fir_lastup_date: son güncelleme tarihi
           ,''                    -- fir_special1: özel alan 1
           ,''                    -- fir_special2: özel alan 2
           ,''                    -- fir_special3: özel alan 3
           ,100                   -- fir_sirano: firma sıra numarası
           ,'Örnek Firma A.Ş.'    -- fir_unvan: firma unvanı
           ,''                    -- fir_unvan2: opsiyonel ikinci unvan satırı
           ,''                    -- fir_FVergiDaire: vergi dairesi
           ,''                    -- fir_FVergiNo: vergi numarası
          )
